{
    "extends": [
        "@salesforce/eslint-config-lwc/recommended",
        "@locker/eslint-config-locker"
    ],
    "overrides": [
        {
            "files": ["*.js"],
            "rules": {
                "@locker/locker/distorted-element-shadow-root-getter": "warn"
            }
        },
        {
            "files": ["*.test.js"],
            "rules": {
                "@lwc/lwc/no-unexpected-wire-adapter-usages": "off"
            }
        }
    ]
}
